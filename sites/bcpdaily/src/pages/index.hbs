<html lang="en">
  <head>

    <!--
      This is the main Handlebars template for the site
      - When the user visits the homepage or submits a color the app calls the endpoints in server.js
      - The server script passes data in here and the Handlebars code builds it into the HTML page
    -->

    <meta charset="utf-8" />
    <link rel="icon" href="https://glitch.com/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{{seo.title}}</title>

    <!-- Meta tags for SEO and social sharing -->
    <link rel="canonical" href="{{seo.url}}" />
    <meta name="description" content="{{seo.description}}" />
    
    <!-- Import the webpage's stylesheet -->
    <link rel="stylesheet" href="/public/style.css" />
  </head>
  <body>
    <div class="content" role="main">
      <h1>Daily readings from the BCP</h1>

      <p>
        {{date}}
      </p>

      <h2>
        {{#if readings.title}}
          {{readings.title}}
        {{else}}
          {{week}}
        {{/if}}
      </h2>
      
      {{#with readings}}        
        <div class="readings">
          <div class="reading">
            <h3>
              Morning Psalms
            </h3>
            
            <ul>
              {{#each psalms.morning}}
                <li><a target="_blank" href="https://bible.oremus.org/?version=NRSV&passage=Psalms%20{{this}}">Psalms {{this}}</a></li>
              {{/each}}
            </ul>
          </div>  
          
          <div class="reading">
            <h3>
              Evening Psalms
            </h3>
            
            <ul>
              {{#each psalms.evening}}
                <li><a target="_blank" href="https://bible.oremus.org/?version=NRSV&passage=Psalms%20{{this}}">Psalms {{this}}</a></li>
              {{/each}}
            </ul>
          </div>
          
          <div class="reading">
            <h3>
              Lessons
            </h3>
            
            <ul>
              {{#each lessons}}
                <li><a target="_blank" href="https://bible.oremus.org/?version=NRSV&passage={{this}}">{{this}}</a></li>
              {{/each}}
            </ul>
          </div>  
        </div>              
      {{/with}}

      <details>
        <summary>JSON results</summary>
        <pre><code>{{readingsJSON}}</code></pre>
      </details>

    </div>    
  </body>
</html>
